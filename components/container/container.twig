{%
  set classes = [
    padding ? padding,
    margin ? margin,
  ]
%}

{%
  set background = [
    background ? background,
  ]
%}

{% set core_classes = [
    container ? container,
    width ? width,
]
%}
<div{{ create_attribute().addClass(background) }}>
<div{{ attributes.addClass(classes) }}>
<div{{ create_attribute().addClass(core_classes) }}>
{{ header }}
{{ description }}
{{ content }}
</div>
</div>
</div>
